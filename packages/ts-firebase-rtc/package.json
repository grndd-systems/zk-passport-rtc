{
  "name": "@grndd-systems/ts-firebase-rtc",
  "version": "1.0.0",
  "description": "Pluggable WebRTC library with Firebase signaling abstraction",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./signaling/firebase": {
      "types": "./dist/core/signaling/FirebaseSignalingClient.d.ts",
      "import": "./dist/core/signaling/FirebaseSignalingClient.js",
      "require": "./dist/core/signaling/FirebaseSignalingClient.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "signaling",
    "firebase",
    "react",
    "typescript",
    "zk-proof",
    "peer-to-peer",
    "data-channel"
  ],
  "author": "GRNDD Systems",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/grndd-systems/ts-firebase-rtc"
  },
  "peerDependencies": {
    "firebase": "^11.0.0 || ^12.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "firebase": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "firebase": "^12.6.0",
    "react": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.0",
    "vitest": "^2.0.0"
  },
  "sideEffects": false
}
